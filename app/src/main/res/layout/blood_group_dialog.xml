<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:orientation="vertical">

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:text="Select Blood Group"
        android:textSize="18dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_aplus_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="A+"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_anegtive_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="A-"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_bplus_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="B+"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_bnegtive_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="B-"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_oplus_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="O+"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_onegative_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="O-"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/dialog_ABplus_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="AB+"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_ABnegtive_tv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_round"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|center_horizontal"
            android:text="AB-"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"/>

</LinearLayout>
