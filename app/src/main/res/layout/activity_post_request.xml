<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".Screens.BloodRequest.PostRequestActivity">

    <EditText
        android:id="@+id/post_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editxt_bg"
        android:hint="Name"
        android:inputType="text"
        android:padding="12dp" />

    <EditText
        android:id="@+id/post_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/editxt_bg"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="Message"
        android:lines="10"
        android:padding="12dp"
        android:scrollbars="vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="Select Blood Group"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_aplus_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="A+"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/post_anegtive_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="A-"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/post_bplus_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="B+"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/post_bnegtive_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="B-"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_oplus_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="O+"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/post_onegative_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="O-"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/post_ABplus_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="AB+"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/post_ABnegtive_tv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_round"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="AB-"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/post_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/editxt_bg"
        android:hint="Address"
        android:inputType="text"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:background="@drawable/location_icon" />

        <TextView
            android:id="@+id/post_click_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_horizontal"
            android:text="Click here for location."
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp">

        <Button
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/red_btn_bg"
            android:fontFamily="@font/montserrat_bold"
            android:text="Done"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="normal" />

        <ProgressBar
            android:id="@+id/post_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>